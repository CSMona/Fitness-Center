@model FitnessCenter.Models.ApplyForCourse
<style>
    .format {
        width:40%;
        height:160px;
    }
</style>
<link rel="stylesheet" href="~/css/courses.css">
<section class="courses">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="form-horizontal">

                    <h5 style=" text-align: center; margin-bottom: 30px;">اشتراك ف الكورس</h5>
                    <div>
                        @{
                            if (ViewBag.Result != null)
                            {
                                <h3>@ViewBag.Result</h3>

                            }

                        }
                    </div>
                    <div>
                        <form style=" width: 40%; margin: auto; position:center">
                            <div style=" margin-bottom: 20px; text-align: center">
                                <label style=" font-weight: bold; margin-bottom: 10px;"> ارسال رسالة للكوتش :</label>
                                <div>
                                    @Html.TextArea("Message", new{ @class = "format"})
                                    @Html.ValidationMessage("Message", "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div style="text-align:center">
                                <input type="submit" value="ارسال" class="btn btn-orange" />
                                @Html.ActionLink("رجوع", "Course", null, new { @class = "btn btn-border-orange" })
                            </div>
                        </form>
                    </div>
                </div>
            }
        </section>
<script src="~/js/lib/bootstrap.bundle.min.js"></script>













