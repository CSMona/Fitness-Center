@model FitnessCenter.Models.Course

<head>
    <link href="~/css/products.css" rel="stylesheet" />
</head>
<section class="products">
    <div class="container">
        <span class="closeicon">
            <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" fill="currentColor" class="bi bi-x-circle" viewBox="0 0 16 16">
                <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" />
                <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z" />
            </svg>
        </span>
        <div class="row">
            <h2 style="color:red">هل حقا تريد حذف في هذا الكورس</h2>
            <div class="col-md-5">
                <div class="info">
                    <div class="description">
                        <h5>اسم الكورس</h5>
                        <h6> @Html.DisplayFor(model => model.courseTitle)</h6>
                    </div>
                    <div class="description">
                        <img src="~/Uploads/@Html.DisplayFor(model=>model.courseImage)" class="thumbnail" style="width:180px;height:180px;" />
                    </div>
                    <div class="description">
                        <h5>وصف عن الكورس</h5>
                        <p> @Html.Raw(HttpUtility.HtmlDecode(Html.DisplayFor(Model => Model.courseContent).ToString()))</p>
                    </div>

                </div>

            </div>
            <div class="col-md-5">
                <div class="info">
                    <div class="name">
                        <h5>اسم الكوتش</h5>
                        <h6> @Html.DisplayFor(model => model.coachName)</h6>
                    </div>
                    <div class="description">
                        <div class="photo">
                            <img src="~/Uploads/@Html.DisplayFor(model=>model.coachImage)" class="thumbnail" style="width:180px;height:180px;" />
                        </div>
                    </div>
                    <div class="photo">
                        <h5> خبره الكوتش</h5>
                        <p>  @Html.DisplayFor(model => model.coachDescribtion)</p>
                    </div>
                </div>
            </div>

        </div>
        <div style="text-align:right">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="حذف" class="btn btn-danger" />
                </div>
            }
            <p style="text-align: left">
                <a href="~/Courses/Index" class="nav-link">العوده للصفحه التحكم</a>
            </p>
        </div>
       

    </div>
    <br />
</section>
<script src="~/js/lib/bootstrap.bundle.min.js"></script>


